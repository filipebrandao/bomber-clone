<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10sp"
    android:background="@drawable/background_explode"
    android:gravity="top" >

    <TextView
        android:id="@+id/textTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/top"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableTop"
        android:layout_width="430sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTopTitle"
        android:layout_centerHorizontal="true"
        android:background="#33000000" android:layout_marginBottom="5sp">

        <TableRow
            android:id="@+id/tableRowTopHeader"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#aa333333" >

            <TextView
                android:id="@+id/TextView30"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:text="@string/top_country"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" android:layout_marginLeft="5sp"/>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/top_position"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView29"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/top_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView28"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/top_points"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    
 <TableLayout
     android:id="@+id/tableTopItems"
     android:layout_width="430sp"
     android:layout_height="wrap_content"
     android:layout_below="@id/tableTop"
     android:layout_centerHorizontal="true"
     android:background="#33000000" >

        <TableRow
            android:id="@+id/tableRowTopItems"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#aa333333" >

            <LinearLayout
                android:id="@+id/topItemsLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical"
                android:layout_weight="1">
            </LinearLayout>
        </TableRow>
    </TableLayout>

 <Button
     android:id="@+id/buttonTopLeft"
     android:layout_width="40sp"
     android:layout_height="40sp"
     android:layout_alignParentBottom="true"
     android:layout_toLeftOf="@+id/tableTopItems"
     android:background="@drawable/menu_button_round"
     android:onClick="onLeftButton"
     android:text="@string/symbol_lesser"
     android:textColor="#ffffff"
     android:textSize="25sp" />

 <Button
     android:id="@+id/ButtonTopRight"
     android:layout_width="40sp"
     android:layout_height="40sp"
     android:layout_alignParentBottom="true"
     android:layout_toRightOf="@+id/tableTopItems"
     android:background="@drawable/menu_button_round"
     android:onClick="onRightButton"
     android:text="@string/symbol_greater"
     android:textColor="#ffffff"
     android:textSize="25sp" />

</RelativeLayout>