<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTopCountry"
        android:layout_height="wrap_content"
        android:text="PT" android:layout_width="60sp" android:layout_marginLeft="5sp"/>

    <TextView
        android:id="@+id/tvTopRank"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:text="1ยบ" android:layout_toRightOf="@id/tvTopCountry"/>

    <TextView
        android:id="@+id/tvTopName"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="zezaoo" android:layout_toRightOf="@id/tvTopRank"/>

    <TextView
        android:id="@+id/tvTopScore"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="10000" android:layout_toRightOf="@id/tvTopName"/>

</RelativeLayout>